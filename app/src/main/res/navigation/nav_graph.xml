<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/teamListFragment">

    <fragment
        android:id="@+id/teamListFragment"
        android:name="app.eyal.teamexplorer.ui.TeamListFragment"
        android:label="TeamList"
        tools:layout="@layout/team_list_fragment">
        <action
            android:id="@+id/action_teamListFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment"
            app:popUpTo="@id/teamListFragment" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="app.eyal.teamexplorer.ui.UserProfileFragment"
        android:label="UserProfile"
        tools:layout="@layout/user_profile_fragment">
        <argument
            android:name="user"
            app:argType="app.eyal.teamexplorer.presenter.UserProfileViewState" />
    </fragment>
</navigation>